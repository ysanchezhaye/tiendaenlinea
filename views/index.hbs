<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap.min css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Animate css -->
    <!-- <link rel="stylesheet" href="/css/animate.css"> -->
    <!-- icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


    <!-- Main Stylesheet -->
    <!-- <link rel="stylesheet" href="/css/estilos.css"> -->
    <title>Mi emprendimiento</title>
</head>

<body>

    <!-- Start Top Header Bar -->
    <header class="top-header">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-4">
                </div>
                <div class="my-3 col-md-4 col-xs-12 col-sm-4 text-center">
                    <span class="fs-2">LOGO</span>
                </div>
                <div class="col-md-4 col-xs-12 col-sm-4 d-flex justify-content-end align-items-center">
                    <a href="../back/login.html">LOGIN </a>
                </div>
            </div>
        </div>
    </header><!-- End Top Header Bar -->


    <!-- Main Menu Section -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="index.html">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#productos">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="como-comprar.html">Como comprar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="sobre-nosotros.html">Sobre nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="contacto.html">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="px-4 py-5 text-center bg-primary bg-gradient text-light">
        <h1 class="display-5 fw-bold ">Mi emprendimiento</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4 text-light">Descripcion corta de lo que trata el negocio</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a href="contacto.html" class="btn btn-dark btn-lg px-4">Contacto</a>
            </div>
        </div>
    </div>


    <section class="products section">
        <div class="container my-5 text-center">
            <h2 class="fs-1">Productos</h2>
            <div class="row">
                {{#if productos}}
                {{#each productos}}
                <div class="col-md-3">
                    <div class="product-item">
                        <div class="product-thumb">
                            <img class="img-fluid" src="{{rutaImagen}}"
                                alt="product-img" />
                            <div class="preview-meta">
                                <ul>
                                    <li>
                                        <span data-bs-toggle="modal" data-bs-target="#product-modal-{{id}}">
                                            <i class="bi bi-search"></i>
                                        </span>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="product-content">
                            <h4><a href="">{{nombre}}</a></h4>
                            <p class="price">{{dolarApeso precio}}</p>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal product-modal fade" id="product-modal-{{id}}" data-bs-backdrop="static"
                    data-bs-keyboard="false" tabindex="-1" aria-labelledby="product-modal" aria-hidden="true">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><i
                            class="bi bi-x"></i></button>
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <div class="modal-image">
                                            <img class="img-fluid" src="{{rutaImagen}}"
                                                alt="product-img" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="product-short-details">
                                            <h2 class="product-title">{{nombre}}</h2>
                                            <p class="product-price">{{dolarApeso precio}}</p>
                                            <div class="product-short-description">
                                                {{descripcion}}
                                                {{caracteristicas}}
                                                <!-- <ul>
                                                    <li> i7 </li>
                                                    <li> 11gen </li>
                                                    <li> 256gb SSD </li>
                                                    <li> 16 gb RAM </li>
                                                </ul> -->
                                            </div>

                                            <a href="detalle-producto.html" class="btn btn-transparent d-block mb-3">Ver detalles
                                                del producto</a>

                                            <a href="mailto:"
                                                class="btn btn-info mt-20">Comprar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                    <h2>No hay productos actualmente</h2>
                {{/if}}

            </div>
        </div>
    </section>



    <footer class="footer section text-center mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="social-media">
                        <li>
                            <a href="https://www.facebook.com/">
                                <i class="bi bi-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.twitter.com/">
                                <i class="bi bi-twitter"></i>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright-text">Copyright &copy;2022. Contacto <a
                            href="mailto:">santiago.acosta@bue.edu.ar</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- 
        Essential Scripts
        =====================================-->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>